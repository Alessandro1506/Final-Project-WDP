<Window x:Class="MessagingClient.Views.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Messaging Client" Height="500" Width="800">
    <DockPanel>

        <!-- Top menu -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="E_xit" Click="ExitMenuItem_Click" />
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_About" Click="AboutMenuItem_Click" />
            </MenuItem>
        </Menu>

        <!-- Main content -->
        <StackPanel Margin="10">

            <TextBlock Text="Settings"
           FontWeight="Bold"
           Margin="0,10,0,5" />

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="IP:" VerticalAlignment="Center" Margin="0,0,5,0" />
                <TextBox x:Name="ServerIpTextBox"
             Width="120"
             Text="  actual IP" />

                <TextBlock Text="Port:" VerticalAlignment="Center" Margin="15,0,5,0" />
                <TextBox x:Name="ServerPortTextBox"
             Width="80"
             Text=" 9000" />
            </StackPanel>

            <TextBlock Text="Messages"
                       FontSize="17"
                       FontWeight="Bold"
                       Margin="0,0,0,5" />

            <!-- Messages list -->
            <ListBox x:Name="MessagesListBox"
                     Height="280"
                     Margin="0,0,0,10" />

            <!-- Target user -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="To:"
                           VerticalAlignment="Center"
                           Margin="0,0,5,0" />
                <TextBox x:Name="TargetUserTextBox"
                         Width="150" />
            </StackPanel>

            <!-- Message and the send button -->
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="MessageTextBox"
                         Width="500"
                         Height="40"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         Margin="0,0,5,0" />
                <Button x:Name="SendButton"
                        Content="Send"
                        Width="80"
                        Click="SendButton_Click" />
            </StackPanel>

        </StackPanel>

    </DockPanel>
</Window>
