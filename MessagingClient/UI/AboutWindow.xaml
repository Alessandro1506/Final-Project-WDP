<Window x:Class="MessagingClient.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About" Height="250" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="About"
                   FontSize="20"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"/>

        <StackPanel Grid.Row="1" Margin="0,15,0,15">
            <TextBlock Text="Final Project WDP" Margin="0,3"/>
            <TextBlock Text="Programmers: Halvin Silva, Kevin Napoles, Heli Patel" Margin="0,3"/>
            <TextBlock Text="Description:LAN messaging client using WPF." TextWrapping="Wrap" Margin="0,3"/>
        </StackPanel>

        <Button Grid.Row="2" Content="Close" Width="80" Height="30"
                HorizontalAlignment="Right"
                Click="CloseButton_Click"/>
    </Grid>
</Window>
